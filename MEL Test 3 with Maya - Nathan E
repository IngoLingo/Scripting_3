{
    //Variable Set Up
    global float $finalFloat;
    global float $firstNumber;
    global string $showFullEquasion;
    
    //Function Set Up
    //Addition Function
    proc float addFloat(float $num1, float $num2)
    {
        global string $showFullEquasion;
        $showFullEquasion = $showFullEquasion + " + " + string($num2);
        return ($num1 + $num2);
    }
    //Subtract Function
    proc float subtractFloat(float $num1, float $num2)
    {
        global string $showFullEquasion;
        $showFullEquasion = $showFullEquasion + " - " + string($num2);
        return ($num1 - $num2);
    }
    //Multiply Function
    proc float multiplyFloat(float $num1, float $num2)
    {
        global string $showFullEquasion;
        $showFullEquasion = $showFullEquasion + " * " + string($num2);
        return ($num1 * $num2);
    }
    //Divide Function
    proc float divideFloat(float $num1, float $num2)
    {
        global string $showFullEquasion;
        $showFullEquasion = $showFullEquasion + " / " + string($num2);
        return ($num1 / $num2);
    }
    //Mean Function
    proc float meanFloat(float $addValues, float $numberOfValues)
    {
        return ($addValues / $numberOfValues);
    }
    
    //Vallues to put into the Equasion
    $firstNumber = 2;
    
    $showFullEquasion = $firstNumber;
    $finalFloat = $firstNumber;
    
    $finalFloat = addFloat($finalFloat, 2);
    $finalFloat = addFloat($finalFloat, 2);
    $finalFloat = addFloat($finalFloat, 2);
    $finalFloat = subtractFloat($finalFloat, 2);
    $finalFloat = multiplyFloat($finalFloat, 2);
    $finalFloat = divideFloat($finalFloat, 2);
    
    print $showFullEquasion;
    print " = ";
    print $finalFloat;
    
    $finalFloat = meanFloat(2+3+4+5+6+7+8, 7);
    
    print "\nmean(2+3+4+5+6+7+8) = ";
    print $finalFloat;

}